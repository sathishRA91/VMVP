<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <Button
        android:id="@+id/Bt_Rcalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rcalc"/>

    <Button
        android:id="@+id/Bt_Cadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadd"/>

    <Button
        android:id="@+id/Bt_Cview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cview"/>

    <Button
        android:id="@+id/Bt_Rreceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rreceive"/>

    <Button
        android:id="@+id/Bt_Rhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rhistory"/>

</LinearLayout>